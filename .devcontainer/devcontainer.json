{
    "name": "Django Dev",
    "dockerComposeFile": "docker-compose.yml",
    "service": "web",
    "workspaceFolder": "/app",
    "settings": {
      "terminal.integrated.defaultProfile.linux": "bash"
    },
    "extensions": [
      "ms-python.python",
      "ms-azuretools.vscode-docker"
    ],
    "postCreateCommand": "pip install -r requirements.txt && python manage.py migrate",
    "forwardPorts": [8000],
    "remoteUser": "root"
}
  